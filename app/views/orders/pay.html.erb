             url: please_pay_order_path(@order.num),
             method: 'patch',
             data: { turbo:false }) do |f|%>


<div data-controller="braintree" data-token="<%= @token %>"></div>

<%= f.submit '送出' ,class: 'action-btn'%>
<%end%>