<h1>註冊帳號</h1>


<%= form_with(model: @user, data: {turbo: false}) do |f| %>

    <div>
        <%= f.label :name,'名字' %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :email,'電子郵件' %>
        <%= f.email_field :email %>
    </div>

    <div>
        <%= f.label :password,'密碼' %>
        <%= f.password_field :password %>
    </div>

    <div>
        <%= f.label :password_confirmation,'密碼確認' %>
        <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit '註冊帳號'%>

<% end %> 